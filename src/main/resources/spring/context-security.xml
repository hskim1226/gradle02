<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/security
        http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <global-method-security secured-annotations="enabled" />

    <http pattern="/static/**"    security="none"/>
    <http pattern="/css/**"    security="none"/>
    <http pattern="/images/**" security="none"/>
    <http pattern="/image/**" security="none"/>
    <http pattern="/img/**" security="none"/>
    <http pattern="/js/**"     security="none"/>
    <http pattern="/jqgrid/**"     security="none"/>
    <http pattern="/jquery-ui/**"     security="none"/>
    <http pattern="/fonts/**"     security="none"/>
    <http pattern="/skin/**"     security="none"/>
    <http pattern="/html/**"   security="none"/>
    <http pattern="/jquery/**" security="none"/>
    <http pattern="/favicon.ico"  security="none"/>
    <http pattern="/intro.html"  security="none"/>
    <http pattern="/test/**"  security="none"/>
    <http pattern="/admin/**"  security="none"/>
    <!--<http pattern="/application/**"  security="none"/>-->
    <http pattern="/common/**"  security="none"/>
    <http pattern="/template/**"  security="none"/>
    <http pattern="/user/adminLogin"  security="none"/>
    <http pattern="/casnote/**"  security="none"/>

    <!--<http realm="admin" pattern="/admin/**" auto-config="true"  use-expressions="true" access-denied-page="/user/adminLogin.do?auth=true" >-->
        <!--<intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" />-->
        <!--<form-login login-processing-url="/j_spring_security_check.do"-->
                    <!--login-page="/user/adminLogin?auth=true"-->
                    <!--default-target-url="/admin/stats"-->
                    <!--always-use-default-target="false"-->
                    <!--authentication-failure-handler-ref="authenticationFailureHandler"-->
                    <!--authentication-failure-url="/user/adminLogin?fail=true" />-->
        <!--<logout logout-url="/j_spring_security_logout.do" invalidate-session="true" logout-success-url="/user/adminLogin"/>-->
    <!--</http>-->

    <!--<http auto-config="true" use-expressions="true" entry-point-ref="loginEntryPoint" access-denied-page="/user/login.do?auth=true" >-->
    <http auto-config="false" use-expressions="true" entry-point-ref="loginEntryPoint" access-denied-page="/user/login.do?auth=true" >
        <intercept-url pattern="/index"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/index.jsp"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/index_intl.jsp"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/user/login*"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/user/agreement"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/user/signup"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/user/signup/save"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/user/idCheck"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/user/findId"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/user/getId"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/user/findPwd"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/user/resetPwd"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/user/savePwd"  access="isAnonymous() or isAuthenticated()"/>
        <intercept-url pattern="/upload/**"  access="isAuthenticated()"/>
        <!-- intercept-url pattern="/admin/**" access="hasRole('ROLE_ADMIN')" / -->
        <intercept-url pattern="/qna/**" access="isAnonymous() or isAuthenticated()" />
        <intercept-url pattern="/**" access="hasRole('ROLE_USER')" />

        <!--<form-login login-processing-url="/j_spring_security_check.do"-->
                    <!--login-page="/user/login?auth=true"-->
                    <!--default-target-url="/application/mylist"-->
                    <!--always-use-default-target="false"-->
                    <!--authentication-failure-handler-ref="authenticationFailureHandler"-->
                    <!--authentication-failure-url="/user/login?fail=true" />-->
        <custom-filter position="FORM_LOGIN_FILTER" ref="customLoginFilter" />
        <logout logout-url="/j_spring_security_logout.do" invalidate-session="true" logout-success-url="/"/>
    </http>

    <beans:bean id="encoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>

    <beans:bean id="userDetailsService" class="com.apexsoft.framework.security.UserDetailsServiceImpl" />

    <!-- for CustomLoginFilter -->
    <beans:bean id="loginEntryPoint" class="org.springframework.security.web.authentication.LoginUrlAuthenticationEntryPoint">
        <beans:constructor-arg name="loginFormUrl" value="/user/login?auth=true" />
    </beans:bean>

    <beans:bean id="customLoginFilter" class="com.apexsoft.framework.security.CustomLoginFilter">
        <beans:property name="filterProcessesUrl" value="/j_spring_security_check.do" />
        <beans:property name="authenticationManager" ref="authenticationManager" />
        <beans:property name="authenticationSuccessHandler" ref="loginSuccessHandler" />
        <beans:property name="authenticationFailureHandler" ref="authenticationFailureHandler" />
    </beans:bean>

    <beans:bean id="loginSuccessHandler" class="org.springframework.security.web.authentication.SavedRequestAwareAuthenticationSuccessHandler">
        <beans:property name="defaultTargetUrl" value="/application/mylist" />
        <beans:property name="alwaysUseDefaultTargetUrl" value="false" />
    </beans:bean>
    <!-- for CustomLoginFilter -->

    <authentication-manager alias="authenticationManager">
        <authentication-provider user-service-ref="userDetailsService">
            <password-encoder ref="encoder"  />
        </authentication-provider>
    </authentication-manager>

    <beans:bean id="authenticationFailureHandler" class="com.apexsoft.framework.security.handler.YsAuthenticationFailureHandler" />

</beans:beans>
